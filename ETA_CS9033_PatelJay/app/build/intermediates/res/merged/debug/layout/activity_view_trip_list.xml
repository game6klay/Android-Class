<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".ViewTripActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tripListView"
        android:choiceMode="singleChoice"
        android:divider="#ffff00"
        android:dividerHeight="4px"
        android:background="#323232"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewTripId"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/tripListView"
        android:layout_marginLeft="25dp"
        android:layout_alignLeft="@+id/tripListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewTripName"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/viewTripId"
        android:layout_toEndOf="@+id/viewTripDest"
        android:layout_below="@+id/viewTripId"
        android:layout_toRightOf="@+id/viewTripDest" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewTripDest"
        android:textColor="#ffffff"
        android:layout_below="@+id/viewTripName"
        android:layout_toRightOf="@+id/viewTripId"
        android:layout_toEndOf="@+id/viewTripId"
        android:layout_marginLeft="100px" />


</RelativeLayout>
